<div class="container">
  <div class="page-header">
    <h1><%= @product.name  %></h1>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Company</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= link_to @product.company.name, company_path(@product.company) %></td>
        <td><%= @product.price.round(2) %></td>
      </tr>
    </tbody>
  </table>
</div>
